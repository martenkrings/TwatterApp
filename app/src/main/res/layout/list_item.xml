<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_weight="1"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/tv_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_picture"
        android:layout_alignParentTop="true"
        android:textSize="16dp"
        android:text="sample author title"/>

    <TextView
        android:id="@+id/tv_atAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_author_name"
        android:textSize="10dp"
        android:text="ATsample"/>

    <TextView
        android:id="@+id/tv_time_passed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingRight="15sp"
        android:text="2h ago"/>

    <TextView
        android:id="@+id/tv_tweet_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_author_name"
        android:layout_toEndOf="@id/iv_picture"
        android:text="sample tweeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeet"/>

</RelativeLayout>